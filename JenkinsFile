pipeline {
    parameters {
      choice(name: 'Profile', choices: ['default', 'second', 'third'], description: 'Profile example to be selected')
    }
    
    agent any

    stages {
        stage('Print Profile') {
            steps {
                sh 'echo ${Profile}'
            }
        }
        
        stage('Execute SH based on default Profile')
        {
            when {
            equals expected: 'default', actual: params.CHOICE
            }
            steps {
                sh 'ls' 
                sh 'chmod +x ExecuteMainBranch.sh'
                sh './ExecuteMainBranch.sh'
            }
        }
        
        stage('Execute SH based on Second Profile')
        {
            when {
                equals expected: 'second', actual: params.CHOICE
            }
            steps {
                sh 'ls' 
                sh 'chmod +x ExecuteMainBranch.sh'
                sh './ExecuteBranch.sh'
            }
        }
        
        stage('Execute SH based on Third Profile')
        {
            when {
                equals expected: 'third', actual: params.CHOICE
            }
            steps {
                sh 'ls' 
                sh 'chmod +x ExecuteMainBranch.sh'
                sh './ExecuteBranch.sh'
            }
        }
        
        stage('Clean WorkSpace')
        {
            steps {
                cleanWs()
            }
        }
        
    }
}
